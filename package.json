{
  "name": "pinyinlite",
  "version": "1.0.1",
  "description": "Lightweight Pinyin library",
  "main": "index.js",
  "scripts": {
    "test": "mocha --check-leaks",
    "test-travis": "istanbul cover ./node_modules/mocha/bin/_mocha --check-leaks",
    "bundle": "browserify ./index.js --standalone pinyinlite | tee dist/pinyinlite.js | uglifyjs -mc > dist/pinyinlite.min.js",
    "benchmark": "node benchmark/run.js",
    "benchmark:asm": "node --trace-hydrogen --trace-phase=Z --trace-deopt --code-comments --hydrogen-track-positions --redirect-code-traces --redirect-code-traces-to=code.asm --print-opt-code benchmark/v8_sample.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/breeswish/pinyinlite.git"
  },
  "keywords": [
    "pinyin",
    "拼音"
  ],
  "author": "Breezewish",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/breeswish/pinyinlite/issues"
  },
  "homepage": "https://github.com/breeswish/pinyinlite#readme",
  "devDependencies": {
    "async": "^1.5.2",
    "mocha": "^2.4.5",
    "should": "^8.2.1",
    "coveralls": "^2.11.6",
    "istanbul": "^0.4.2"
  }
}
